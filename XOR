//Вернама
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
 
int main() {
    char text[256];
    printf("Сообщение: ");
    fgets(text, 256, stdin);
 
    srand(time(0));
    for (int i = 0; text[i]; i++) {
        char key = rand() % 256;
        text[i] ^= key;
        printf("%02X ", text[i]);  // Вывод в HEX формате
    }
 
    return 0;
}